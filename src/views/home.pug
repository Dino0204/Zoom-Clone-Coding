doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    title Doom
  body 
    header
      h1 Doom
    main
      div#welcome
        form 
          input(placeholder="room name" type="text" required)
          button Enter Room
        h4 Open Rooms
        ul
      div#room
        h3
        ul
        form#name
          input(placeholder="nickname" type="text" required)
          button Save
        form#msg
          input(placeholder="message" type="text" required)
          button Send

    script(src="/socket.io/socket.io.js")
    script(src="/public/js/app.js")